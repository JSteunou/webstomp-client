  },
  "homepage": "https://github.com/JSteunou/webstomp-client#readme",
  "devDependencies": {
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015": "^6.6.0",
    "http-server": "^0.9.0",
    "in-publish": "^2.0.0",
    "jscs": "^2.11.0",
    "jshint": "^2.9.1",
    "opn-cli": "^3.1.0",
    "webpack": "^1.12.14",
    "ws": "^1.0.1",
    "eslint":"^2.11.1"
  },
  "scripts": {
    "test": "echo \"TODO: add tests\"",
    "build": "webpack && webpack -p --config webpack.min.config.js",
