    "*.md",
    "*.txt"
  ],
  "main": "dist/webstomp.js",
  "es6": "src/webstomp.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JSteunou/webstomp-client.git"
  },
  "bugs": {
